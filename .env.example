# Server Configuration
BASE_URL=http://localhost #base url for generated links = the the url that serves this app
PORT=3000

# File Upload Configuration
# Supports: b, kb, mb, gb, tb (e.g., 100mb, 5gb, 1024kb)
MAX_FILE_SIZE_BYTES=10mb
BODY_SIZE_LIMIT=50mb

# Session and Cleanup Configuration
SESSION_TIMEOUT_MS=900000       # 15 minutes in milliseconds
CLEANUP_INTERVAL_MS=300000      # 5 minutes in milliseconds

# File Retention
FILE_RETENTION_TIME=30          # How long to keep uploaded files in minutes



# Global rate limit (DDoS protection - all IPs combined)
GLOBAL_RATE_LIMIT_WINDOW_MS=60000   # 1 minute window
GLOBAL_RATE_LIMIT_MAX=10000         # Max requests total per window


# Rate Limiting Configuration FOR 1 IP:

# General API rate limit (requests per window)
RATE_LIMIT_WINDOW_MS=60000      # 1 minute window
RATE_LIMIT_MAX_REQUESTS=100     # Max requests per window for general endpoints

# Session creation rate limit (stricter to prevent abuse)
SESSION_RATE_LIMIT_WINDOW_MS=60000   # 1 minute window
SESSION_RATE_LIMIT_MAX=10            # Max session creations per window

# Upload rate limit (strictest)
UPLOAD_RATE_LIMIT_WINDOW_MS=60000    # 1 minute window  
UPLOAD_RATE_LIMIT_MAX=5              # Max uploads per window
