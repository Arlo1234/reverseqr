# Example environment variables
# Copy this to .env and adjust values for your environment

# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# File Upload Configuration
UPLOAD_DIR=./public/uploads
MAX_FILE_SIZE=524288000  # 500MB in bytes
MAX_FILES_PER_UPLOAD=10

# Session Configuration
SESSION_TIMEOUT=900000   # 15 minutes in ms
CLEANUP_INTERVAL=300000  # 5 minutes in ms

# Security
ENABLE_HTTPS=false
SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem

# Database (future use)
# DB_URL=mongodb://localhost:27017/reverseqr
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/reverseqr.log

# Rate Limiting
RATE_LIMIT_WINDOW=15  # minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS (for remote access)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
